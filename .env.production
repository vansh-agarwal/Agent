# Production Environment Variables for Railway Backend

# Supabase Configuration (REQUIRED)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# OpenAI API Key (REQUIRED for AI features)
OPENAI_API_KEY=your_openai_api_key

# Google OAuth Credentials (REQUIRED for authentication)
GOOGLE_CREDENTIALS_PATH=credentials.json

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=False

# CORS Configuration (Update with your Vercel domain after deployment)
ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:5000

# Database
DATABASE_PATH=tasks.db
